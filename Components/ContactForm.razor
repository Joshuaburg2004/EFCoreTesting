@using Microsoft.AspNetCore.Components.Forms;

<h1>@Mode Contact</h1>

<hr />
@if (Contact is not null)
{
    <EditForm Model="Contact"
              OnInvalidSubmit="(async () => await HandleSubmitAsync(false))"
              OnValidSubmit="(async () => await HandleSubmitAsync(true))">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <h2>🆔 Identification</h2>
        <p>
            <label>
                SerieNummer:
                <InputText @bind-Value="Contact.SerieNummer" />
                <ConcurrencyField Model="Contact"
                                  DbModel="DbContact"
                                  Property="obj => obj?.SerieNummer" />
            </label>
            <label>
                Naam Onderdeel:
                <InputText @bind-Value="Contact.Naam" />
                <ConcurrencyField Model="Contact"
                                  DbModel="DbContact"
                                  Property="obj => obj?.Naam" />
            </label>
            
        </p>
        <p>
            <label>
                Quantity:
                <InputNumber @bind-Value="Contact.Hoeveelheid" />
                <ConcurrencyField Model="Contact"
                                  DbModel="DbContact"
                                  Property="obj => obj?.Hoeveelheid" />
            </label>
            
        </p>
        <h2>🏠 Adres</h2>
        <p>
            <label>
                Locatie:
                <InputText @bind-Value="Contact.Locatie" />
                <ConcurrencyField Model="Contact"
                                DbModel="DbContact"
                                Property="obj => obj?.Locatie" />
            </label>
        </p>
        <h2>📒 Additional Information</h2>
        <p>
            <label>
                Soort:
                <InputText @bind-Value="Contact.Soort" />
                <ConcurrencyField Model="Contact"
                                  DbModel="DbContact"
                                  Property="obj => obj?.Soort" />
            </label>
            <label>
                Comment (optioneel):
                <InputText @bind-Value="Contact.Comment" />
                <ConcurrencyField Model="Contact"
                                  DbModel="DbContact"
                                  Property="obj => obj?.Comment" />
            </label>
            
        </p>
        <br />
        <button disabled="@Busy" class="btn btn-warning"
                @onclick="CancelAsync">
            Cancel
        </button>&nbsp;
        <button disabled="@Busy" type="submit"
                class="btn btn-primary">
            Submit
        </button>
    </EditForm>
}

@code {
    // Let parent handle result of validation.
    [Parameter]
    public EventCallback<bool> ValidationResult { get; set; }

    // Let parent handle what to do on cancel.
    [Parameter]
    public EventCallback CancelRequest { get; set; }

    // True if add mode.
    [Parameter]
    public bool IsAdd { get; set; }

    // The Contact to upsert.
    [Parameter]
    public Contact? Contact { get; set; }

    // The database version of Contact if a concurrency issue.
    [Parameter]
    public Contact? DbContact { get; set; }

    // Prevent multiple asynchronous operations at the same time.
    [Parameter]
    public bool Busy { get; set; }

    // Mode.
    private string Mode => IsAdd ? "Add" : "Edit";

    // Ask to cancel.
    private Task CancelAsync()
    {
        return CancelRequest.InvokeAsync(null);
    }

    // Handle form submission request.
    // isValid: True when field validation passed.
    private Task HandleSubmitAsync(bool isValid)
    {
        return ValidationResult.InvokeAsync(isValid);
    }
}
